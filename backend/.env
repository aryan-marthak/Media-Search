# Environment configuration for Media Search

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/media_search
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/media_search

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# JWT Authentication - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-key-change-in-production-abc123

# ML Configuration - Using CUDA for RTX 3050
DEVICE=cuda
SIGLIP_MODEL=google/siglip-base-patch16-224
VLM_MODEL=HuggingFaceTB/SmolVLM-Instruct
